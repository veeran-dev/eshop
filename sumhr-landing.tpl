                    var dataparam = $(form).serialize()+"&form=2&page=1";
                    $.ajax({
                        type: 'POST',
                        //dataType: 'json',
                        async: true,
                        url: 'get_eliteResponse2.php',
                        data: dataparam,
                        cache: true,
                        success: function(data) 
