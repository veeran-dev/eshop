SELECT map.product_id,kpl.name,kp.reference, kp.active, GROUP_CONCAT(kfc.city_name)
                FROM kob_product kp
                LEFT JOIN kob_product_lang kpl ON kpl.id_product=kp.id_product AND kpl.id_lang=1
                LEFT JOIN kob_product_zone_mapping map on kp.id_product=map.product_id
                LEFT JOIN kob_fulfillment_centre kfc on kfc.id_fulfillment_centre=map.zone_id
                WHERE kp.id_product IN(1448,
4964,
4966,
4985,
15303,
20024,
20062,
20064,
20067,
20109,
20158,
20169,
