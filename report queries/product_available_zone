SELECT kp.id_product,kpl.name,kp.reference, kp.active FROM kob_product kp 
LEFT JOIN kob_product_lang kpl ON kpl.id_product=kp.id_product AND kpl.id_lang=1 
WHERE kp.id_product IN(1448, 4964, 4966, 4985, 15303, 20024, 20062, 20064, 20067, 20109, 20158, 20169, 20171, 201013, 201014, 201099, 201297, 201308, 201320, 201322, 201329, 201332, 201397, 201473, 201540, 201558, 201628, 203570, 203585, 203601, 203629, 203801, 203855, 203889, 204673, 204713, 204755, 204934, 205070, 205248, 205510, 206861, 206999, 207075, 208425, 208504, 215826, 218141, 220084, 263900, 265552, 928733, 928735, 928739, 928741, 928801, 929637, 930082, 931429, 931430, 931484, 931528, 931558, 933180, 1017682, 1018344, 1018346, 1018348, 1018350, 1018392, 1018737, 1021614, 1021618, 1021620, 1021686, 1021687 )
